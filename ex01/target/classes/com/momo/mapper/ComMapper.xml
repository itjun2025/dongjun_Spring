<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper의 namespace속성은 연결할 mapper의 interface 풀 경로로 작성  -->
<mapper namespace="com.momo.mapper.ComMapper">

<select id="list" resultType="com.momo.vo.ComBoardVO">

select * from com_board

</select>

<insert id="insert">

insert into com_board values(#{com_bno},#{nickname},#{com_title},#{com_content}
						,#{regdate},#{update_date},#{replycnt},#{mno})

</insert>

<delete id="delete">
		delete com_board where com_bno= #{com_bno}
</delete>


<select id="getOne" resultType="com.momo.vo.ComBoardVO">
		select * from com_board where com_bno=#{com_bno}
	</select>

<update id="update">

update com_board
	set com_title = #{com_title}
		   		, com_content = #{com_content}
		   		, nickname = #{nickname}
		   		, regdate = #{regdate}
		   		, update_date  = sysdate
		   		, replycnt = #{replycnt}
		   		, mno = #{mno}
		 where com_bno = #{com_bno}  

</update>

<select id="getTotal" resultType="int">
	select count(*) from com_board
</select>


</mapper>
